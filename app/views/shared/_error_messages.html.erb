<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "warning") %> prevented saving</h2>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
